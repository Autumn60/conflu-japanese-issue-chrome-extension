{
  "name": "Confluence Readability",
  "version": "1.0.1",
  "manifest_version": 3,
  "description": "Extension to improve Confluence readability",
  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.net/*"
      ],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}
